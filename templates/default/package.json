    "@types/chai": "^4.2.0",
    "@types/express": "^5.0.2",
    "@types/mocha": ">=9.1.0",
    "@types/node": "22.7.5",
    "@zk-kit/lean-imt": "^2.1.0",
    "@zk-kit/lean-imt.sol": "2.0.0",
    "chai": "^4.2.0",
