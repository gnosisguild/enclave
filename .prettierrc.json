{
  "printWidth": 140,
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "semi": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "proseWrap": "always",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": ["*.mdx", "*.md"],
      "options": {
        "printWidth": 100
      }
    },
    {
      "files": "*.sol",
      "options": {
        "singleQuote": false
      }
    }
  ]
}
