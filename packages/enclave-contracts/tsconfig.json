{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "ignition/modules/**/*.ts",
    "test/**/*.ts",
    "tasks/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "types"]
}
