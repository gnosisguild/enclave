{
  "extends": "@gnosis-guild/enclave-config/tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2022",
    "noEmit": false
  },
  "exclude": ["node_modules"],
  "files": ["hardhat.config.ts"],
  "include": ["tasks/**/*", "test/**/*", "deploy/**/*", "types/**/*"]
}
